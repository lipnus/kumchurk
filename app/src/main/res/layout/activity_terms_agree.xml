<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lipnus.kumchurk.detailpage.introduce.AboutUsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">

            <!--로고-->
            <ImageView
                android:onClick="onClick_agree_logo"
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/agree_logo_iv"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.4"

                android:text="서비스이용약관 및 개인정보처리방침을 읽고\n동의해 주시기 바랍니다"/>


            <!--줄-->
            <View
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>


            <TextView
                android:onClick="onClick_agreeSeeTerms"
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textSize="14dp"
                android:text="서비스이용약관 보기"/>

            <TextView
                android:onClick="onClick_agreeSeePersonal"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textSize="14dp"
                android:text="개인정보처리방침 보기"/>





        </LinearLayout>
    </ScrollView>


    <!--엑스-->
    <ImageView
        android:id="@+id/agree_cancel_iv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="left|top"
        android:alpha="0.6"
        android:onClick="onClick_agreeFinish"/>

    <!--동의하기 버튼-->
    <Button
        android:onClick="onClick_agress_terms"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#222222"
        android:textColor="#f7f2f2"
        android:textSize="16dp"
        android:text="동의하기"/>

</FrameLayout>








