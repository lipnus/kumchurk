<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

            <!--동그라미 프사-->
            <ImageView
                android:onClick="onClick_slide_profile"
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/slide_profile_circle_iv"/>

            <TextView
                android:id="@+id/slide_profile_tv"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="nickname"
                android:layout_marginBottom="20dp"/>



            <ImageView
                android:onClick="onClick_subMenu"
                android:layout_marginTop="40dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv1"/>

            <ImageView
                android:onClick="onClick_subMenu"
                android:layout_marginTop="15dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv2"/>

            <ImageView
                android:onClick="onClick_subMenu"
                android:layout_marginTop="15dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv3"/>

            <ImageView
                android:onClick="onClick_subMenu"
                android:layout_marginTop="15dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv4"/>

            <ImageView
                android:visibility="gone"

                android:onClick="onClick_subMenu"
                android:layout_marginTop="15dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv5"/>

            <ImageView
                android:onClick="onClick_subMenu"
                android:layout_marginTop="15dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv6" />

            <ImageView
                android:onClick="onClick_subMenu"
                android:layout_marginTop="15dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv7"
                android:layout_marginBottom="20dp"/>




            <ImageView
                android:visibility="gone"

                android:onClick="onClick_subMenu"
                android:layout_marginTop="15dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/slide_menu_iv8"

                android:layout_marginBottom="20dp"/>


    </LinearLayout>

</ScrollView>