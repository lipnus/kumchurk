<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:orientation="horizontal"
    android:gravity="center">

    <!--좌측이미지-->
    <FrameLayout
        android:id="@+id/left_menu_FrameLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/left_menu_Iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/left_menu_nameTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#dbdbdb"
                android:text="메뉴이름"/>

            <TextView
                android:id="@+id/left_menu_costTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#dbdbdb"
                android:text="0.0"/>

        </LinearLayout>


    </FrameLayout>

    <!--우측이미지-->
    <FrameLayout
        android:layout_marginLeft="1dp"
        android:id="@+id/right_menu_FrameLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/right_menu_Iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/right_menu_nameTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#dbdbdb"
                android:text="메뉴이름2"/>

            <TextView
                android:id="@+id/right_menu_costTv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#dbdbdb"
                android:text="0.0"/>
        </LinearLayout>

    </FrameLayout>

    <!--카테고리를 표시-->
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/category_menu_LinearLayout"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|bottom"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/category_menuTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="- Category -"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/category_arrowIv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom|right"/>

    </FrameLayout>


</LinearLayout>