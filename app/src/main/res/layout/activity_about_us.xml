<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lipnus.kumchurk.detailpage.introduce.AboutUsActivity">

    <!--상단바-->
    <include
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        layout="@layout/top_bar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">

            <!--로고-->
            <ImageView
                android:onClick="onClick_about_logo"
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/aboutus_logo_iv"/>

            <TextView
                android:id="@+id/aboutus_subtitle"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#000000"
                android:text=""/>


            <!--줄-->
            <View
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>


            <TextView
                android:id="@+id/aboutus_sunpil"
                android:onClick="onClick_aboutus_email"
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textSize="13dp"
                android:text="황선필(대표)\n고려대학교 컴퓨터학과 / 디자인조형학부\nsunpil13@korea.ac.kr"
                />

            <TextView
                android:id="@+id/aboutus_tail"
                android:onClick="onClick_aboutus_email"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textSize="13dp"
                android:text="김태일(디자인)\n고려대학교 디자인조형학부\nktikti7679@naver.com"/>

            <TextView
                android:id="@+id/aboutus_sueun"
                android:onClick="onClick_aboutus_email"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textSize="13dp"
                android:text="황수은(디자인)\n고려대학교 디자인조형학부\ngleamingyou@naver.com"/>

            <TextView
                android:id="@+id/aboutus_yongsu"
                android:onClick="onClick_aboutus_email"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textSize="13dp"
                android:text="장용수(엔지니어)\n고려대학교 컴퓨터학과\npaul6290@korea.ac.kr"/>

            <TextView
                android:id="@+id/aboutus_hyunjae"
                android:onClick="onClick_aboutus_email"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textSize="13dp"
                android:text="이현재(마케팅)\n고려대학교 생체의공학과 / 디자인조형학부\naisxk@naver.com"/>

            <ImageView
                android:onClick="onClick_about_noodle"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="bottom|right"
                android:id="@+id/aboutus_noodle_iv"
                android:layout_width="100dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>








